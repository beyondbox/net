<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_gray_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header_with_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <include layout="@layout/layout_askbuy_product_info"/>

            <View style="@style/LineStyle"/>

            <View style="@style/LineStyle" android:layout_marginTop="10dp"/>

            <include layout="@layout/layout_askbuy_adviser"/>

            <View style="@style/LineStyle"/>

            <View style="@style/LineStyle" android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的报价 : "
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥500"
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

            </LinearLayout>

            <View style="@style/LineStyle"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量 : "
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <TextView
                    android:id="@+id/txtNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3套"
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

            </LinearLayout>

            <View style="@style/LineStyle"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付金额 : "
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <TextView
                    android:id="@+id/txtPayedMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥450"
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

            </LinearLayout>

            <View style="@style/LineStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款方式 : "
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <TextView
                    android:id="@+id/txtPayedType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%订金"
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

            </LinearLayout>

            <View style="@style/LineStyle" />

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/txtConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:layout_margin="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="确定生产"
        android:textColor="@color/while_color"
        android:textSize="16sp" />


</LinearLayout>