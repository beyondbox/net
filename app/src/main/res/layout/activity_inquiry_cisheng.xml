<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_gray_color">

    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_header_with_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/while_color"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="产品信息"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <View
                style="@style/LineStyle"/>










            <LinearLayout
                android:id="@+id/ll_specification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:gravity="top"
                        android:text="*"
                        android:textColor="@color/red_color"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="丝径(mm)"
                        android:textSize="14sp"
                        android:textColor="@color/text_black_color"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="#DEDFE0" />


                    <com.appjumper.silkscreen.view.MyGridView
                        android:id="@+id/gridSiJing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingLeft="10dp"
                        android:numColumns="3"
                        android:horizontalSpacing="15dp"
                        android:verticalSpacing="12dp"/>

                </LinearLayout>


                <View style="@style/LineStyle"/>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:gravity="top"
                        android:text="*"
                        android:textColor="@color/red_color"
                        android:textSize="14sp"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="刺距"
                        android:textColor="@color/text_black_color"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="#DEDFE0" />


                    <com.appjumper.silkscreen.view.MyGridView
                        android:id="@+id/gridCiJu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingLeft="10dp"
                        android:horizontalSpacing="15dp"
                        android:numColumns="3"
                        android:verticalSpacing="12dp" />

                </LinearLayout>

                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:visibility="invisible"
                        android:gravity="top"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/red_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="拧股方式"
                        android:textSize="14sp"
                        android:textColor="@color/text_black_color"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="#DEDFE0" />


                    <com.appjumper.silkscreen.view.MyGridView
                        android:id="@+id/gridNingGu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingLeft="10dp"
                        android:numColumns="3"
                        android:horizontalSpacing="15dp"
                        android:verticalSpacing="12dp"/>

                </LinearLayout>

                <View style="@style/LineStyle"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:visibility="visible"
                        android:gravity="top"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/red_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="丝材质"
                        android:textSize="14sp"
                        android:textColor="@color/text_black_color"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="#DEDFE0" />


                    <com.appjumper.silkscreen.view.MyGridView
                        android:id="@+id/gridSiCaiZhi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingLeft="10dp"
                        android:numColumns="3"
                        android:horizontalSpacing="15dp"
                        android:verticalSpacing="12dp"/>

                </LinearLayout>

                <View style="@style/LineStyle"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:visibility="invisible"
                        android:gravity="top"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/red_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="外表处理"
                        android:textSize="14sp"
                        android:textColor="@color/text_black_color"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="#DEDFE0" />


                    <com.appjumper.silkscreen.view.MyGridView
                        android:id="@+id/gridWaiBiao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingLeft="10dp"
                        android:numColumns="3"
                        android:horizontalSpacing="15dp"
                        android:verticalSpacing="12dp"/>

                </LinearLayout>

                <View style="@style/LineStyle"/>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:visibility="invisible"
                        android:gravity="top"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/red_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="单捆重量"
                        android:textSize="14sp"
                        android:textColor="@color/text_black_color"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="20dp"
                            android:background="#DEDFE0" />

                        <EditText
                            android:id="@+id/etDanKun"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:imeOptions="actionNext"
                            android:inputType="number|numberDecimal"
                            android:paddingLeft="10dp"
                            android:maxLines="1"
                            android:hint="7 - 50"
                            android:textColor="@color/text_black_color"
                            android:textColorHint="@color/light_gray_color"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="5dp"
                            android:text="kg"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/LineStyle"/>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:visibility="invisible"
                        android:gravity="top"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/red_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="数量"
                        android:textSize="14sp"
                        android:textColor="@color/text_black_color"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="20dp"
                            android:background="#DEDFE0" />

                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:imeOptions="actionNext"
                            android:inputType="number|numberDecimal"
                            android:paddingLeft="10dp"
                            android:maxLines="1"
                            android:hint="1 - 1000"
                            android:textColor="@color/text_black_color"
                            android:textColorHint="@color/light_gray_color"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="5dp"
                            android:text="捆"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View style="@style/LineStyle"/>











            <RadioGroup
                android:id="@+id/rg_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/view_background_gray_color"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="询价范围"
                    android:textColor="@color/theme_color"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_checkbox_blue_round"
                    android:drawablePadding="6dp"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp"
                    android:text="全部企业"
                    android:textColor="@color/black_color"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/rb_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_checkbox_blue_round"
                    android:drawablePadding="6dp"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp"
                    android:text="认证企业"
                    android:textColor="@color/black_color"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/rb_noauth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_checkbox_blue_round"
                    android:drawablePadding="6dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:visibility="gone"
                    android:text="未认证企业"
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />
            </RadioGroup>


            <View style="@style/LineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="图纸信息"
                    android:textColor="@color/theme_color"
                    android:textSize="14sp" />

                <View style="@style/LineStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <com.appjumper.silkscreen.view.MyGridView
                        android:id="@+id/gridview"
                        style="@style/GridViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="12dp"/>

                </LinearLayout>
            </LinearLayout>

            <View style="@style/LineStyle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注说明"
                        android:textColor="@color/theme_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:visibility="gone"
                        android:text="(最多200字)"
                        android:textColor="@color/light_gray_color"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.appjumper.silkscreen.view.MyEditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:gravity="top"
                    android:background="@color/while_color"
                    android:hint="材质上锌量、单捆重量、生产周期"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="3dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/text_black_color"
                    android:textColorHint="@color/light_gray_color"
                    android:textSize="13sp" />
            </LinearLayout>

            <View style="@style/LineStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="信息时长"
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_info_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="一小时"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>

            </LinearLayout>

            <View style="@style/LineStyle" />


            <LinearLayout
                android:id="@+id/ll_fit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_white_background"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="符合厂家"
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_enterprise_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请选择厂家"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/light_gray_color"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/icon_arrows_right_01" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/view_background_gray_color"
                >
                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/selector_btn_blue"
                    android:gravity="center"
                    android:text="发布询价"
                    android:textColor="@color/while_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
