<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:background="@color/view_background_gray_color"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <View
        style="@style/LineStyle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="分享到"
        android:textColor="@color/black_color"
        android:layout_margin="12dp"
        android:textSize="14sp"
        android:layout_height="wrap_content" />
    <View
        style="@style/LineStyle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/qq_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_qq"
            android:text="QQ"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:drawablePadding="6dp"
            android:textColor="@color/text_gray_color"
            />
        <TextView
            android:id="@+id/qqspace_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_qq_space"
            android:text="QQ空间"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:drawablePadding="6dp"
            android:textColor="@color/text_gray_color"
            />
        <TextView
            android:id="@+id/wx_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wx"
            android:text="微信"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:drawablePadding="6dp"
            android:textColor="@color/text_gray_color"
            />
        <TextView
            android:id="@+id/wxpyq_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wx_friend"
            android:text="朋友圈"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:drawablePadding="6dp"
            android:textColor="@color/text_gray_color"
            />
    </LinearLayout>
    <View
        style="@style/LineStyle"
        />
    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="取消分享"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/theme_color"
        />
</LinearLayout>
