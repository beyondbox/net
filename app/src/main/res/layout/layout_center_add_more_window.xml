<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#90FFFFFF"
    android:gravity="bottom|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_music_window_close"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="300dp"
        android:paddingRight="51dp"
        android:text="一键询价"
        android:textColor="@color/theme_color"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/more_window_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/icon_machine"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="加工"
        android:textColor="@color/theme_color"
        android:textSize="16sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/more_window_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="30dip"
        android:layout_toRightOf="@+id/more_window_local"
        android:clickable="true"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/icon_order"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="订做"
        android:textColor="@color/theme_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/more_window_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/more_window_online"
        android:clickable="true"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/icon_spot_contract"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="现货"
        android:textColor="@color/theme_color"
        android:textSize="16sp" />

