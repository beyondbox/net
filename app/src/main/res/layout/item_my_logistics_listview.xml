<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/select_white_background"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    >
                    <TextView
                        android:id="@+id/tv_form_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="线路：安平-深圳"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"
                        android:drawableLeft="@mipmap/icon_circle_green18"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        />
                    <TextView
                        android:id="@+id/tv_passby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="途径：石家庄 武汉 郑州"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"
                        android:drawablePadding="6dp"
                        android:drawableLeft="@mipmap/icon_circle_yellow18"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/icon_arrows_right" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/LineStyle"
        android:layout_marginLeft="89dp"
        />
</LinearLayout>
