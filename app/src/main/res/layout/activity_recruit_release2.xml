<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_gray_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header_with_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/while_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black_color"
                    android:text="标题"/>

                <EditText
                    android:id="@+id/edtTxtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginLeft="12dp"
                    android:maxLength="15"
                    android:hint="请输入标题，15字以内"
                    android:textColor="@color/black_color"
                    android:textSize="14sp"
                    android:textColorHint="@color/light_gray_color"/>

            </LinearLayout>


            <View style="@style/LineStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/view_background_gray_color" />

            <View style="@style/LineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="职位信息"
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />

                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="职位类别"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <TextView
                        android:id="@+id/tv_job_position"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:drawableRight="@mipmap/icon_home_arrows_right04"
                        android:background="@null"
                        android:editable="false"
                        android:hint="点击选择职位类别"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/light_gray_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="薪资"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3.5">

                        <EditText
                            android:id="@+id/et_salary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:paddingLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@null"
                            android:hint="请输入薪资范围"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/light_gray_color"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元/月"
                            android:textColor="@color/black_color"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="学历"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <TextView
                        android:id="@+id/tv_experience"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:drawableRight="@mipmap/icon_home_arrows_right04"
                        android:background="@null"
                        android:editable="false"
                        android:text="不限"
                        android:hint=""
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/light_gray_color"
                        android:textSize="14sp" />

                </LinearLayout>


                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="类型"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdoBtnfulltime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="10dp"
                            android:checked="true"
                            android:text="全职"
                            android:button="@null"
                            android:drawableLeft="@drawable/selector_checkbox_blue_round"
                            android:drawablePadding="5dp"/>

                        <RadioButton
                            android:id="@+id/rdoBtnParttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_marginLeft="20dp"
                            android:text="兼职"
                            android:button="@null"
                            android:drawableLeft="@drawable/selector_checkbox_blue_round"
                            android:drawablePadding="5dp"/>

                    </RadioGroup>

                </LinearLayout>

                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="性别"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdoBtnAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="10dp"
                            android:checked="true"
                            android:text="不限"
                            android:button="@null"
                            android:drawableLeft="@drawable/selector_checkbox_blue_round"
                            android:drawablePadding="5dp"/>

                        <RadioButton
                            android:id="@+id/rdoBtnMan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_marginLeft="20dp"
                            android:text="仅男士"
                            android:button="@null"
                            android:drawableLeft="@drawable/selector_checkbox_blue_round"
                            android:drawablePadding="5dp"/>

                        <RadioButton
                            android:id="@+id/rdoBtnWoman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_marginLeft="20dp"
                            android:text="仅女士"
                            android:button="@null"
                            android:drawableLeft="@drawable/selector_checkbox_blue_round"
                            android:drawablePadding="5dp"/>

                    </RadioGroup>

                </LinearLayout>


                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="经验要求"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3.5">

                        <EditText
                            android:id="@+id/et_experience"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:paddingLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@null"
                            android:inputType="phone"
                            android:hint="输入工作年限要求"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/light_gray_color"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年"
                            android:textColor="@color/black_color"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>


                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="工作城市"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <TextView
                        android:id="@+id/tv_work_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:drawableRight="@mipmap/icon_home_arrows_right04"
                        android:background="@null"
                        android:editable="false"
                        android:text="安平县城"
                        android:hint=""
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/light_gray_color"
                        android:textSize="14sp" />

                </LinearLayout>


                <View style="@style/LineStyle"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="详细地址"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="22dp"
                        android:background="#DEDFE0"/>

                    <EditText
                        android:id="@+id/txtAdressDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="@null"
                        android:maxLength="15"
                        android:text=""
                        android:hint="输入详细工作地址，15字以内"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/light_gray_color"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


            <View style="@style/LineStyle"/>












            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/view_background_gray_color" />

            <View style="@style/LineStyle" />












            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="岗位职责"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="(最多200字)"
                        android:textColor="@color/light_gray_color"
                        android:textSize="13sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_responsibilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/view_background_gray_color"
                    android:gravity="top"
                    android:hint="请输入岗位职责相关描述"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="3dp"
                    android:minLines="5"
                    android:maxLength="200"
                    android:padding="12dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/light_gray_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/LineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="信息时长"
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_info_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="3天"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/icon_arrows_right" />
                </LinearLayout>


            </LinearLayout>

            <View style="@style/LineStyle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="注：在【我的】页面【我的发布】中刷新让信息更靠前"
                android:textColor="@color/red_color"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/txtConfirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_btn_blue"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="6dp"
                android:text="发布信息"
                android:textColor="@color/while_color"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
