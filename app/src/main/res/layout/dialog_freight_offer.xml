<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/while_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/theme_color"
        android:textSize="18sp"
        android:text="衡水安平 — 山东青岛"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="输入我的运费价格"
        android:textSize="14sp"
        android:textColor="@color/text_black_color2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edtTxtPrice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_attent_trans"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint=""
            android:inputType="numberDecimal"
            android:textColorHint="@color/light_gray_color"
            android:textColor="@color/black_color"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/edtTxtPrice"
            android:text="元"
            android:textColor="@color/text_black_color2"
            android:textSize="14sp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="3dp"
        android:gravity="center"
        android:text="注 : 被厂家选择承运后，丝网+会收取信息费100元，保险费100元 保50万"
        android:textColor="@color/red_color"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/txtOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="确认报价"
        android:textColor="@color/while_color"
        android:textSize="14sp" />


</LinearLayout>