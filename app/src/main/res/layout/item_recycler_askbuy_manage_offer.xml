<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white_background"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <com.appjumper.silkscreen.view.BorderRectImageView
        android:id="@+id/imgViHead"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_home_exhibition_bg"/>

    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="报价中"
        android:textSize="14sp"
        android:textColor="@color/red_color"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgViHead"
        android:layout_toLeftOf="@id/txtState"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="求购美格网C002"
        android:textSize="14sp"
        android:textColor="@color/new_gray_color"/>


    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtTitle"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:text="美格网 200卷"
        android:textSize="14sp"
        android:textColor="@color/text_black_color"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtTitle"
        android:layout_alignBottom="@id/imgViHead"
        android:text="8-05 12:00"
        android:textSize="12sp"
        android:textColor="@color/new_gray_light_color"/>



    <TextView
        android:id="@+id/txtOfferNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtTime"
        android:layout_alignBottom="@id/imgViHead"
        android:layout_marginLeft="20dp"
        android:text="报价(10)"
        android:textSize="12sp"
        android:textColor="@color/new_gray_color"/>

    <TextView
        android:id="@+id/txtHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgViHead"
        android:layout_alignParentRight="true"
        android:text="12-09 13:00截止"
        android:textSize="12sp"
        android:textColor="@color/new_gray_color"/>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="我的报价: 265元"
        android:textSize="13sp"
        android:textColor="@color/text_black_color2"/>

    <View
        style="@style/LineStyle"
        android:layout_below="@id/imgViHead"
        android:layout_marginTop="12dp"/>

</RelativeLayout>