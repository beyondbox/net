<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_gray_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header_with_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物信息"
                    android:textSize="15sp"
                    android:textColor="@color/new_gray_light_color"/>

                <com.appjumper.silkscreen.view.BorderRectImageView
                    android:id="@+id/imgViHead"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/textView0"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_home_exhibition_bg"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/imgViHead"
                    android:text="500元/套"
                    android:textSize="14sp"
                    android:textColor="@color/orange_color"/>

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgViHead"
                    android:layout_toLeftOf="@id/txtPrice"
                    android:layout_alignTop="@id/imgViHead"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:text="求购美格网30根求购美格网30根求购美格网30根"
                    android:textSize="14sp"
                    android:textColor="@color/new_gray_color" />



                <TextView
                    android:id="@+id/txtNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPrice"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:text="200套"
                    android:textSize="13sp"
                    android:textColor="@color/new_gray_light_color"/>

                <TextView
                    android:id="@+id/txtWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtNum"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:text="29kg/卷"
                    android:textSize="13sp"
                    android:textColor="@color/new_gray_light_color"/>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgViHead"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:text="美格网"
                    android:textSize="13sp"
                    android:textColor="@color/new_gray_color"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_white_background"
                android:padding="12dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址"
                    android:textSize="15sp"
                    android:textColor="@color/new_gray_light_color"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView1"
                    android:layout_marginTop="12dp"
                    android:gravity="right"
                    android:text="收 货 人:"
                    android:textSize="14sp"
                    android:textColor="@color/new_gray_color"/>

                <LinearLayout
                    android:id="@+id/linearLayout0"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:layout_below="@id/textView2"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/location_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="收货地址:"
                        android:textSize="14sp"
                        android:textColor="@color/new_gray_color"/>
                </LinearLayout>


                
                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/icon_arrows_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/txtMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/textView2"
                    android:layout_toLeftOf="@id/imageView0"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/new_gray_color"/>

                <TextView
                    android:id="@+id/txtConsigner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_toLeftOf="@id/txtMobile"
                    android:layout_alignTop="@id/textView2"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/new_gray_color"/>

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_toLeftOf="@id/imageView0"
                    android:layout_alignLeft="@id/txtConsigner"
                    android:layout_alignTop="@id/linearLayout0"
                    android:lineSpacingExtra="2dp"
                    android:hint="请选择收货地址"
                    android:textColorHint="@color/new_gray_light_color"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/new_gray_color"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送信息"
                    android:textSize="15sp"
                    android:textColor="@color/new_gray_light_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="由丝网+进行短途运输 (送到货站结运费)"
                        android:textSize="14sp"
                        android:textColor="@color/new_gray_color"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchTrans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:longClickable="false"/>
                </LinearLayout>

                <View style="@style/LineStyleLight" android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注说明:"
                        android:textSize="14sp"
                        android:textColor="@color/new_gray_color"/>

                    <EditText
                        android:id="@+id/edtTxtRemark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingLeft="10dp"
                        android:hint="填写内容与报价顾问沟通协商确认"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="2dp"
                        android:textSize="13sp"
                        android:textColor="@color/new_gray_color"
                        android:textColorHint="@color/light_gray_color"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_chk_freight"/>

                <TextView
                    android:id="@+id/txtProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/new_gray_color"
                    android:text="提交订单即视为同意丝网+《交易协议》内容"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/while_color">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用合计:"
            android:textColor="@color/new_gray_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:text=""
            android:textColor="@color/orange_color"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue_rect"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="提交订单"
            android:textColor="@color/while_color"
            android:textSize="15sp" />

    </LinearLayout>




</LinearLayout>