<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_gray_dark_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            style="@style/transparent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:text="现货寄售"
                android:textColor="@color/while_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="买货分类"
                android:textColor="@color/while_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:text="求购订做"
                android:textColor="@color/while_color"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/while_color">

            <ListView
                android:id="@+id/lvCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>






        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:layout_weight="3">

            <com.chanven.lib.cptr.PtrClassicFrameLayout
                android:id="@+id/ptrLayt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:text="库存处理"
                                android:textSize="13sp"
                                android:textColor="@color/text_black_color2"/>

                            <TextView
                                android:id="@+id/txtMore0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="12dp"
                                android:text="更多>"
                                android:textColor="@color/theme_color"
                                android:textSize="12sp"/>
                        </RelativeLayout>

                        <com.appjumper.silkscreen.view.MyGridView
                            android:id="@+id/grid0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:numColumns="3"
                            android:background="@color/while_color"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:text="厂家委托"
                                android:textSize="13sp"
                                android:textColor="@color/text_black_color2"/>

                            <TextView
                                android:id="@+id/txtMore1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="12dp"
                                android:text="更多>"
                                android:textColor="@color/theme_color"
                                android:textSize="12sp"/>
                        </RelativeLayout>

                        <com.appjumper.silkscreen.view.MyGridView
                            android:id="@+id/grid1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="3"
                            android:padding="5dp"
                            android:background="@color/while_color"/>

                    </LinearLayout>
                </ScrollView>

            </com.chanven.lib.cptr.PtrClassicFrameLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>