<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white_background"
    android:orientation="vertical">

    <View style="@style/LineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="订单编号 : 2017102009432501"
            android:textColor="@color/text_black_color2"
            android:textSize="14sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/icon_home_arrows_right04"
            android:drawablePadding="5dp"
            android:padding="12dp"
            android:text="查看详情"
            android:textColor="@color/text_gray_light_color"
            android:textSize="13sp"/>
    </LinearLayout>

    <View
        style="@style/LineStyle"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="衡水安平 — 山东青岛"/>

            <TextView
                android:id="@+id/txtCarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitle"
                android:layout_marginTop="8dp"
                android:textColor="@color/theme_color"
                android:textSize="13sp"
                android:text="13米/围栏"/>

            <TextView
                android:id="@+id/txtProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txtCarModel"
                android:layout_toRightOf="@id/txtCarModel"
                android:layout_marginLeft="30dp"
                android:textColor="@color/theme_color"
                android:textSize="13sp"
                android:text="35吨声屏障"/>

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCarModel"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_black_color2"
                android:textSize="14sp"
                android:text="09-25(今天)  15:00装车"/>

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#DEDFE0"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待司机支付"
                android:textColor="@color/red_color"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="最低报价\n5600"
                android:textSize="13sp"
                android:textColor="@color/text_black_color2"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHandle0"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="联系司机"
            android:textColor="@color/while_color"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtHandle1"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="查看司机位置"
            android:textColor="@color/while_color"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtHandle2"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="确认送达"
            android:textColor="@color/while_color"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        style="@style/LineStyle"
        android:layout_marginTop="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/view_background_gray_color"/>

</LinearLayout>