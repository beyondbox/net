<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header_with_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="求购美格网"
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lineSpacingExtra="2dp"
                    android:text="求购美格网350丝的22根100片22根100片 求购美格网350丝的22根100片22根100片"
                    android:textSize="14sp"
                    android:textColor="@color/text_black_color"/>
            </LinearLayout>


            <View style="@style/LineStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/view_background_gray_color"/>

            <View style="@style/LineStyle"/>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品单价："
                    android:textSize="14sp"
                    android:textColor="@color/text_black_color"/>

                <EditText
                    android:id="@+id/edtTxtPrice"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_item_attent_trans"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:hint="请输入产品单价"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/light_gray_color"
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="元"
                    android:textSize="13sp"
                    android:textColor="@color/text_black_color"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品重量："
                    android:textSize="14sp"
                    android:textColor="@color/text_black_color"/>

                <EditText
                    android:id="@+id/edtTxtWeight"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_item_attent_trans"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:hint="请输入产品重量"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/light_gray_color"
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtWeightUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_item_attent_trans"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:drawableRight="@mipmap/icon_arrows_down"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textColor="@color/text_gray_light_color"
                    android:textSize="13sp"/>

            </LinearLayout>

            <View style="@style/LineStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/view_background_gray_color"/>

            <View style="@style/LineStyle"/>












            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="报价说明"
                android:textColor="@color/text_black_color"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/edtTxtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/view_background_gray_color"
                android:gravity="left|top"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="3dp"
                android:minLines="6"
                android:hint="填写简要货物说明，不允许填写联系方式"
                android:textColor="@color/text_black_color"
                android:textColorHint="@color/light_gray_color"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:lineSpacingExtra="2dp"
                android:text="注：交易成功，平台将向厂家收取0.5%交易服务费。在丝网+平台交易，均为现金交易，不赊欠"
                android:textColor="@color/red_color"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_chk_freight"/>

                <TextView
                    android:id="@+id/txtProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/new_gray_color"
                    android:text="参与报价即视为同意丝网+《交易协议》内容"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/txtConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:layout_margin="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="立即报价"
        android:textColor="@color/while_color"
        android:textSize="16sp" />


</LinearLayout>