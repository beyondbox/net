<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/while_color"
        >
        <View
            android:id="@+id/view"
            style="@style/transparent"
            android:layout_height="25dp"
            android:background="#20000000"
            />
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/theme_color"
                android:drawableLeft="@mipmap/icon_return_blue"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/title_layout"
        android:background="@color/while_color"
        >
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_logo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/et_name"
            android:maxLength="11"
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_phone03"
            android:hint="手机号码"
            android:inputType="number"
            android:textColor="@color/black_color"
            android:textSize="13sp"
            android:textColorHint="@color/gray_color"
            android:drawablePadding="41dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            />
        <View
            style="@style/LineStyle"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:inputType="number"
                android:drawableLeft="@mipmap/icon_verify03"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:textColor="@color/black_color"
                android:textSize="13sp"
                android:textColorHint="@color/gray_color"
                android:drawablePadding="41dp"
                android:background="@null"
                />
            <TextView
                android:id="@+id/t_obtain_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:textSize="13sp"
                android:text="获取验证码"
                />
        </LinearLayout>
        <View
            style="@style/LineStyle"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/icon_password02"
            android:gravity="center_vertical"
            android:hint="登录密码"
            android:textColor="@color/black_color"
            android:textSize="13sp"
            android:textColorHint="@color/gray_color"
            android:drawablePadding="41dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            />
        <View
            style="@style/LineStyle"
            android:layout_below="@id/et_pwd"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            />

        <Button
            android:id="@+id/btn_register"
            android:layout_below="@id/textview"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/selector_login_btn"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="40dp"
            android:text="注册"
            android:textSize="15sp"
            android:textColor="@color/while_color"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/chkDeal"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/selector_checkbox_green_rect"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="我已阅读并且同意"
                android:textColor="@color/gray_color"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/txtDeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《丝网+用户协议》"
                android:textColor="@color/theme_color"
                android:textSize="11sp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
