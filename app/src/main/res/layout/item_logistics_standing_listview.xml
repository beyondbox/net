<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/select_white_background"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:src="@mipmap/icon_logo_image61"
        android:scaleType="centerCrop"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="120dp"
                    android:textColor="@color/text_gray_color"
                    android:textSize="14sp"
                    android:text="深圳市阿普匠科技有限公司"
                    />
                <ImageView
                    android:id="@+id/img_auth_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_certification_green"
                    android:layout_marginLeft="3dp"
                    />
                <ImageView
                    android:id="@+id/img_enterprise_auth_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_certification"
                    android:layout_marginLeft="3dp"
                    />
                <ImageView
                    android:id="@+id/img_enterprise_productivity_auth_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_certification_yellow"
                    android:layout_marginLeft="3dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016.11.01 19:02"
                        android:textColor="@color/text_gray_color"
                        android:layout_alignParentRight="true"
                        android:textSize="11sp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_form_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线路：安平-深圳"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/icon_circle_green18"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                />
            <TextView
                android:id="@+id/tv_passby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="途径：石家庄 武汉 郑州"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                android:drawablePadding="6dp"
                android:drawableLeft="@mipmap/icon_circle_yellow18"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
        <View
            style="@style/LineStyle"
            android:layout_marginLeft="12dp"
            />
    </LinearLayout>

</LinearLayout>
