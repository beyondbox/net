<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/while_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/text_black_color"
        android:textSize="16sp"
        android:text="确认付款"/>

    <View style="@style/LineStyleLight" android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="26dp"
        android:paddingBottom="26dp"
        android:text="¥ 200.00"
        android:textColor="#000000"
        android:textSize="28sp"/>

    <View style="@style/LineStyleLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款账号"
            android:textSize="14sp"
            android:textColor="@color/text_gray_light_color"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="159***1223"
            android:textSize="14sp"
            android:textColor="@color/text_gray_light_color"/>

    </LinearLayout>

    <View style="@style/LineStyleLight"/>

    <View style="@style/LineStyleLight" android:layout_marginTop="25dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdoBtnAlipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_white_background"
            android:button="@null"
            android:checked="true"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/selector_checkbox_company"
            android:text="支付宝支付"
            android:textSize="14sp"
            android:textColor="@color/text_black_color2"/>

        <View style="@style/LineStyleLight" android:visibility="gone"/>

        <RadioButton
            android:id="@+id/rdoBtnWeChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/select_white_background"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/selector_checkbox_company"
            android:text="微信支付"
            android:textSize="14sp"
            android:textColor="@color/text_black_color2"/>
    </RadioGroup>

    <View style="@style/LineStyleLight"/>

    <TextView
        android:id="@+id/txtConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="确认支付"
        android:textColor="@color/while_color"
        android:textSize="15sp" />

</LinearLayout>