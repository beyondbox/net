<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <com.appjumper.silkscreen.view.BorderRectImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_logo_image61"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="安平县优加网络科技有限公司"
        android:textSize="14sp"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_alignLeft="@id/txtName"
        android:layout_marginTop="5dp"
        android:text="入驻时间: 2016-03-18"
        android:textSize="12sp"
        android:textColor="@color/new_gray_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignLeft="@id/txtName">

        <ImageView
            android:id="@+id/imgViCertiGreen"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_certification_green"/>

        <ImageView
            android:id="@+id/imgViCertiBlue"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_certification"/>

        <ImageView
            android:id="@+id/imgViCertiYellow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_certification_yellow"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/imageView"
        android:text="55km"
        android:textColor="@color/new_gray_color"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/txtService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:text="石笼网加工、石笼网订做、金刚网现货、浸塑加工"
        android:textColor="@color/new_gray_color"
        android:textSize="13sp"/>



</RelativeLayout>