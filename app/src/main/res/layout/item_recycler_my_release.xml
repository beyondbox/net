<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="18dp"
    android:background="@drawable/select_white_background">

    <com.appjumper.silkscreen.view.BorderRectImageView
        android:id="@+id/imgViHead"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_error"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgViHead"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:maxWidth="180dp"
        android:ellipsize="end"
        android:text="包塑丝"
        android:textSize="15sp"
        android:textColor="@color/black_color"/>

    <ImageView
        android:id="@+id/imgViTag"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_toRightOf="@id/txtTitle"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/icon_home_order"/>

    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:layout_below="@+id/txtTitle"
        android:layout_alignLeft="@id/txtTitle"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_marginTop="5dp"
        android:text="展示中"
        android:textColor="@color/while_color"
        android:textSize="9sp"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="5dp"
        android:text="07:25 09:16"
        android:textColor="@color/light_gray_color"
        android:textSize="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgViHead"
        android:layout_alignBottom="@id/imgViHead"
        android:layout_alignLeft="@id/txtTitle">

        <TextView
            android:id="@+id/txtEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_my_release_menu"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:visibility="invisible"
            android:text="编辑"
            android:textSize="11sp"
            android:textColor="@color/text_gray_color"/>



        <TextView
            android:id="@+id/txtShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_my_release_menu"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:visibility="invisible"
            android:text="分享"
            android:textSize="11sp"
            android:textColor="@color/text_gray_color"/>

        <TextView
            android:id="@+id/txtRefresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_my_release_menu"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:text="刷新"
            android:textSize="11sp"
            android:textColor="@color/text_gray_color"/>

        <TextView
            android:id="@+id/txtDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_my_release_menu"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:text="删除"
            android:textSize="11sp"
            android:textColor="@color/text_gray_color"/>

    </LinearLayout>

    <View
        style="@style/LineStyle"
        android:layout_marginTop="18dp"
        android:layout_below="@id/imgViHead"/>

</RelativeLayout>