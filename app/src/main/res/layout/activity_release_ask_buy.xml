<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header_with_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:drawableRight="@mipmap/arrow_right"
                android:text="玻璃格栅网"
                android:textSize="14sp"
                android:textColor="@color/text_black_color"/>

            <View style="@style/LineStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/view_background_gray_color"/>

            <View style="@style/LineStyle"/>

            <com.appjumper.silkscreen.view.MyGridView
                android:id="@+id/gridview"
                style="@style/GridViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="12dp"/>

            <View style="@style/LineStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/view_background_gray_color"/>

            <View style="@style/LineStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="求购说明"
                android:textColor="@color/text_black_color"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/edtTxtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/view_background_gray_color"
                android:gravity="left|top"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="3dp"
                android:minLines="7"
                android:hint=""
                android:textColor="@color/text_black_color"
                android:textColorHint="@color/light_gray_color"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="截止时间："
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@null"
                    android:padding="12dp"
                    android:hint="请选择报价截止时间"
                    android:textSize="14sp"
                    android:textColor="@color/text_black_color"
                    android:textColorHint="@color/light_gray_color"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/txtConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:layout_margin="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="立即发布"
        android:textColor="@color/while_color"
        android:textSize="16sp" />


</LinearLayout>