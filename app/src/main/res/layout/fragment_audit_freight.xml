<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/shape_round_corner_white_big"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="衡水安平"
                        android:textColor="@color/text_black_dark_color"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/from_to"/>

                    <TextView
                        android:id="@+id/txtEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="目的地"
                        android:textColor="@color/text_black_dark_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/orange_color"
                        android:textSize="13sp"
                        android:text="待审核"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="45dp"
                        android:textColor="@color/light_gray_color"
                        android:textSize="12sp"
                        android:text="09-25 15:00"/>
                </LinearLayout>

                <View style="@style/LineStyle" android:layout_marginTop="15dp"/>

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="用户名称:"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘东强"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/imgViCall"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/company_phone"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="需要车辆:"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>

                    <TextView
                        android:id="@+id/txtCarModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13米/围栏"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="运送货物:"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>

                    <TextView
                        android:id="@+id/txtProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35吨声屏障"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="装车时间:"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>

                    <TextView
                        android:id="@+id/txtLoadTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09-25 13:00"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>
                </LinearLayout>

                <View style="@style/LineStyle" android:layout_marginTop="15dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="备注:"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>

                    <TextView
                        android:id="@+id/txtRemark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:text="备注信息内容"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/llBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRefuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_black"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="审核失败"
            android:textColor="@color/while_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@drawable/selector_btn_blue"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="审核通过"
            android:textColor="@color/while_color"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>