<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/view_background_gray_color"
    android:layout_height="match_parent">
    <!-- title -->
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:orientation="vertical">
        <View
            android:id="@+id/view"
            style="@style/transparent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@mipmap/icon_return" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="创建企业"
                android:textColor="@color/while_color"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">


            <RelativeLayout
                android:id="@+id/rl_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_item_area_bg"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <com.appjumper.silkscreen.view.BorderCircleImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/avatar_company"
                    android:scaleType="centerCrop"
                    app:border_color="@color/border_gray_light"
                    app:border_width="1dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="12dp"
                        android:gravity="center_vertical"
                        android:text="点击上传图片"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_item_area_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_background"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:text="* 企业名称"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_enterprise_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/while_color"
                        android:hint="点击输入企业名称"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="70dp" />

                <LinearLayout
                    android:id="@+id/lv_enterprise_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_background"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:text="* 注册时间"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_enterprise_create_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="70dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_background"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:text="* 注册资本"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_create_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="60dp"
                        android:layout_toEndOf="@+id/textView"
                        android:background="@color/while_color"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="9"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:text="万元"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="70dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_background"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:text="* 员工人数"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_number_employees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="60dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:background="@color/while_color"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:text="人"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_item_area_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_background"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:drawableLeft="@mipmap/company_contact"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="*联系人"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_enterprise_contacts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:background="@color/while_color"
                        android:hint="点击输入联系人"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="100dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_background"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:drawableLeft="@mipmap/company_phone"
                        android:drawablePadding="7dp"
                        android:text="*联系电话"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_enterprise_tel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:background="@color/while_color"
                        android:hint="点击输入联系电话"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="100dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_background"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:drawableLeft="@mipmap/company_address"
                        android:drawablePadding="9dp"
                        android:text="*地址"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_enterprise_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:background="@color/while_color"
                        android:hint="点击输入企业地址"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_item_area_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 企业简介"
                        android:textColor="@color/black_color"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="(最多1000字)"
                        android:textSize="11sp"
                        android:textColor="@color/light_gray_color"/>
                </LinearLayout>



                <View
                    style="@style/LineStyle"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/editSms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="您可以写写企业的优势，例如产品质量、服务等......"
                    android:inputType="textMultiLine"
                    android:minLines="8"
                    android:maxLength="1000"
                    android:textColor="@color/black_color"
                    android:textSize="13sp" />

                <com.appjumper.silkscreen.view.MyGridView
                    android:id="@+id/gridview"
                    style="@style/GridViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_btn_blue"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="创建企业"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


    <!--*******************************旧版本的选项****************************-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/select_white_background"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#C3C3C3"
            android:text="厂地面积"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            />

        <EditText
            android:id="@+id/et_plant_area"
            android:layout_toEndOf="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/while_color"
            android:textColor="@color/black_color"
            android:layout_marginRight="60dp"
            android:layout_marginTop="12dp"
            android:inputType="number"
            android:textSize="14sp"
            android:maxLength="6"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#C3C3C3"
            android:text="m²"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/select_white_background"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#C3C3C3"
            android:text="机器数量"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            />

        <EditText
            android:id="@+id/et_number_machine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/while_color"
            android:textColor="@color/black_color"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="number"
            android:maxLength="5"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/select_white_background"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#C3C3C3"
            android:text="公司产能"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            />

        <EditText
            android:id="@+id/et_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/while_color"
            android:textColor="@color/black_color"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>



</LinearLayout>
