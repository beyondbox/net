<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0074CF"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            style="@style/transparent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:text="发布信息"
            android:textSize="18sp"
            android:textColor="@color/while_color"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imgViClose"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/close_black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/imgViClose"
        android:layout_below="@id/llTitle"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


  <!--*******************************发布信息*************************************-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llReleaseProcess"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_process"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="提供代加工"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleaseOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.appjumper.silkscreen.view.CircleImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="接受丝网订做"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleaseStock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.appjumper.silkscreen.view.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_stock"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="现货库存供应"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>

                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llReleaseStation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_line"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="货站线路发布"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llReleaseWorkshop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_house"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="厂房出租"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleasePost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_hire"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="招聘"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                </LinearLayout>











                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llReleaseDevice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_device"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="设备出售"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/view_background_gray_color"/>




    <!--********************************一键询价**********************************************-->




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_plus_inquiry_bg"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/txtInquiryOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/selector_btn_blue_plus"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:gravity="center"
                        android:text="发布求购"
                        android:textSize="14sp"
                        android:textColor="@color/while_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/text_black_color"
                        android:textSize="13sp"
                        android:text="报价快\n价廉\n底价"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_plus_inquiry_bg"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/txtInquiryStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/selector_btn_blue_plus"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:gravity="center"
                        android:text="空车配货"
                        android:textSize="14sp"
                        android:textColor="@color/while_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/text_black_color"
                        android:textSize="13sp"
                        android:text="资源丰富\n找车快速\n运输安全放心"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>