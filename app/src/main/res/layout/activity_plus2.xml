<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color">

    <include
        android:id="@+id/llTitle"
        layout="@layout/layout_header_with_text"/>

    <ImageView
        android:id="@+id/imgViClose"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/close_black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/imgViClose"
        android:layout_below="@id/llTitle"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


  <!--*******************************发布信息*************************************-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llReleaseProcess"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_process"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="提供代加工"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleaseOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="接受丝网订做"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleaseStock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_stock"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="现货库存供应"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>

                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llReleaseStation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_line"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="货站线路发布"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleaseTruck"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_truck"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="个人车辆拉货"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleaseFindTruck"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_transport"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="货物运输需求"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>

                </LinearLayout>











                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llReleaseWorkshop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_house"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="厂房出租"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleasePost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_hire"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="招聘"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llReleaseDevice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/select_white_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@mipmap/p_device"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="机器出售"
                            android:textSize="13sp"
                            android:textColor="@color/text_black_color"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/view_background_gray_color"/>




    <!--********************************一键询价**********************************************-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="一键询价"
                android:textSize="18sp"
                android:textColor="@color/text_black_color"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>