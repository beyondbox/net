<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/view_background_gray_color"
    android:layout_height="match_parent">
    <!-- title -->
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:orientation="vertical">
        <View
            android:id="@+id/view"
            style="@style/transparent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@mipmap/icon_return" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="创建企业"
                android:textColor="@color/while_color"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                style="@style/LineStyle"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/while_color"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1.基本信息"
                    android:textColor="@color/text_gray_color"
                    android:textSize="13sp"
                    android:layout_margin="12dp"
                    android:padding="6dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_arrows_right61"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2.简要介绍"
                    android:textColor="@color/text_gray_color"
                    android:textSize="13sp"
                    android:layout_margin="12dp"
                    android:padding="6dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_arrows_right61"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="3.联系方式"
                    android:textColor="@color/theme_color"
                    android:textSize="13sp"
                    android:layout_margin="12dp"
                    android:padding="6dp"
                    />

            </LinearLayout>
            <View
                style="@style/LineStyle"
                />
            <View
                android:layout_marginTop="12dp"
                style="@style/LineStyle"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/select_white_background"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#C3C3C3"
                        android:text="联系人"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        />

                    <EditText
                        android:id="@+id/et_enterprise_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/while_color"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:textSize="14sp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/select_white_background"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#C3C3C3"
                        android:text="手机号"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        />

                    <EditText
                        android:id="@+id/et_enterprise_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/while_color"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"

                        />
                </LinearLayout>
                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/select_white_background"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#C3C3C3"
                        android:text="QQ"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        />

                    <EditText
                        android:id="@+id/et_enterprise_qq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/while_color"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"

                        />
                </LinearLayout>
                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/select_white_background"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#C3C3C3"
                        android:text="企业网址"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        />

                    <EditText
                        android:id="@+id/et_enterprise_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/while_color"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_marginBottom="12dp"
                        android:layout_gravity="center_vertical"

                        />
                </LinearLayout>
                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/select_white_background"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#C3C3C3"
                        android:text="联系电话"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        />

                    <EditText
                        android:id="@+id/et_enterprise_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/while_color"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <View
                    style="@style/LineStyle"
                    android:layout_marginLeft="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/select_white_background"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#C3C3C3"
                        android:text="企业地址"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        />

                    <EditText
                        android:id="@+id/et_enterprise_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/while_color"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/LineStyle"
                />
            <Button
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/selector_login_btn"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="完成"
                android:textSize="15sp"
                android:textColor="@color/while_color"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
