<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_background_gray_color">

    <include layout="@layout/layout_header_with_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@mipmap/complete"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="10dp"
        android:text="提交认证成功\n请耐心等待丝网+官方审核"
        android:textSize="16sp"
        android:textColor="@color/theme_color"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/text_gray_color"/>


    <TextView
        android:id="@+id/txtCall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/company_phone"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="联系客服"
        android:textColor="@color/text_black_color"
        android:textSize="14sp" />

</LinearLayout>