<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/while_color"
                android:layout_alignParentBottom="true"/>

            <com.appjumper.silkscreen.view.BigCornerImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/update_head" />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/while_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="5dp"
                android:layout_margin="20dp"
                android:textSize="14sp"
                android:textColor="@color/text_black_color"
                android:text="空车配货功能\n厂家发货再也不用担心了\n司机认证"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="3dp"
                android:textSize="13sp"
                android:textColor="@color/light_gray_color"
                android:text="欢迎各位小主体验新版本，随时来吐槽咨询，我们及时优化更新，带给用户更好的体验。"/>

            <View style="@style/LineStyle" android:layout_marginTop="15dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_update_confirm_bg"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="立即更新"
            android:textSize="15sp"
            android:textColor="@color/theme_color"/>


    </LinearLayout>



    <ImageView
        android:id="@+id/imgViClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/close_circle"/>


</RelativeLayout>