<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white_background"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <com.appjumper.silkscreen.view.BorderRectImageView
        android:id="@+id/imgViHead"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_home_exhibition_bg"/>

    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="报价中"
        android:textSize="14sp"
        android:textColor="@color/red_color"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgViHead"
        android:layout_toLeftOf="@id/txtState"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="求购美格网"
        android:textSize="14sp"
        android:textColor="@color/text_black_color"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtTitle"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="3dp"
        android:text="8-05 12:00"
        android:textSize="12sp"
        android:textColor="@color/light_gray_color"/>



    <TextView
        android:id="@+id/txtHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignBottom="@id/imgViHead"
        android:text="查看详情"
        android:textColor="@color/while_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtOfferNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txtHandle"
        android:layout_below="@id/txtTime"
        android:layout_marginTop="6dp"
        android:layout_marginRight="25dp"
        android:text="报价（10）"
        android:textSize="13sp"
        android:textColor="@color/text_black_color2"/>

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txtOfferNum"
        android:layout_alignLeft="@id/txtTime"
        android:layout_below="@id/txtTime"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="12-09 13:00截止"
        android:textSize="13sp"
        android:textColor="@color/text_black_color2"/>

    <TextView
        android:id="@+id/txtHandle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_toLeftOf="@id/txtHandle"
        android:layout_alignBottom="@id/txtHandle"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:text="删除信息"
        android:textColor="@color/while_color"
        android:textSize="13sp" />

    <View
        style="@style/LineStyle"
        android:layout_below="@id/imgViHead"
        android:layout_marginTop="12dp"/>

</RelativeLayout>