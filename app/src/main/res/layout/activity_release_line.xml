<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header_with_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/while_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="线路"
                    android:textColor="@color/theme_color"
                    android:textSize="14sp" />

                <View style="@style/LineStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="始发地"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="请选择货运起点"
                                android:text="安平"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                android:singleLine="true"
                                android:textColor="@color/black_color"
                                android:textColorHint="@color/light_gray_color"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_arrows_right_01" />
                        </LinearLayout>

                        <View style="@style/LineStyle" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="途径地"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:hint="请点击右边+添加途径地"
                                android:textColorHint="@color/light_gray_color" />

                            <com.appjumper.silkscreen.view.MyRecyclerView
                                android:id="@+id/gv_passby"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="40dp"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/iv_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@color/while_color"
                                android:paddingBottom="13dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="12dp"
                                android:paddingTop="13dp"
                                android:src="@mipmap/icon_addition_01" />
                        </RelativeLayout>

                        <View style="@style/LineStyle" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="目的地"
                        android:textColor="@color/black_color"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="请选择目的地"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                android:singleLine="true"
                                android:textColor="@color/black_color"
                                android:textColorHint="@color/light_gray_color"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_arrows_right_01" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View style="@style/LineStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/view_background_gray_color" />








            <View style="@style/LineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注说明"
                        android:textColor="@color/theme_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="(最多200字)"
                        android:textColor="@color/light_gray_color"
                        android:textSize="13sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/view_background_gray_color"
                    android:gravity="top"
                    android:hint=" 请输入备注说明"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="3dp"
                    android:minLines="7"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/light_gray_color"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/txtConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/selector_btn_blue"
        android:gravity="center"
        android:layout_margin="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="完成"
        android:textColor="@color/while_color"
        android:textSize="16sp" />


</LinearLayout>
