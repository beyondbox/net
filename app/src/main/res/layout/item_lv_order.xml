<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="石笼网"
                        android:textColor="@color/black_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_aliasname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（石笼网1、石笼网2）"
                        android:textColor="@color/new_gray_color"
                        android:textSize="16sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="丝径100-200，网孔4-10厘米，尺寸100*200 200*400"
                    android:textColor="@color/new_gray_color"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:maxWidth="200dp"
                        android:text="阿普匠丝网有限公司"
                        android:textColor="@color/new_gray_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/img_auth_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/icon_certification_green" />

                    <ImageView
                        android:id="@+id/img_enterprise_auth_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/icon_certification" />

                    <ImageView
                        android:id="@+id/img_enterprise_productivity_auth_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/icon_certification_yellow" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/LineStyle" />
</LinearLayout>
