<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_white_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/view_background_gray_color"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="12dp"
        android:text="A"
        android:textColor="#808080"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <CheckBox
            android:id="@+id/chkSelect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:background="@drawable/selector_checkbox_green_rect"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <com.appjumper.silkscreen.view.BorderRectImageView
            android:id="@+id/imgViProduct"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/chkSelect"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_home_news_bg" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgViProduct"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/text_black_color"
            android:text="产品名称1 (别名1，别名2)"/>

    </RelativeLayout>



</LinearLayout>