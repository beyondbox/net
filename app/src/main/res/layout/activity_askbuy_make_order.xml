<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_gray_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header_with_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <include layout="@layout/layout_askbuy_product_info"/>

            <View style="@style/LineStyle"/>

            <View style="@style/LineStyle" android:layout_marginTop="10dp"/>

            <include layout="@layout/layout_askbuy_adviser"/>

            <View style="@style/LineStyle"/>

            <View style="@style/LineStyle" android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品单价 : "
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥500"
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

            </LinearLayout>

            <View style="@style/LineStyle"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量 : "
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgViMinus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/view_background_gray_color"
                        android:src="@mipmap/order_minus"/>

                    <TextView
                        android:id="@+id/txtNum"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:background="@color/view_background_gray_color"
                        android:text="1"
                        android:textColor="@color/text_black_color"
                        android:textSize="13sp"/>

                    <ImageView
                        android:id="@+id/imgViAdd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/view_background_gray_color"
                        android:src="@mipmap/order_add"/>
                </LinearLayout>

            </LinearLayout>

            <View style="@style/LineStyle"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/while_color"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款方式 : "
                    android:textSize="15sp"
                    android:textColor="@color/text_black_color"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtPayedType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_item_attent_trans"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:drawableRight="@mipmap/icon_arrows_down"
                    android:drawablePadding="12dp"
                    android:text="全额付款"
                    android:textColor="@color/text_gray_color"
                    android:textSize="13sp"/>

            </LinearLayout>

            <View style="@style/LineStyle" android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </ScrollView>


    <View style="@style/LineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/while_color">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="合计 : "
            android:textColor="@color/text_black_color"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/orange_color"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_blue"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="立即支付"
            android:textColor="@color/while_color"
            android:textSize="15sp" />

    </LinearLayout>




</LinearLayout>